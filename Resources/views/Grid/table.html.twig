{% block lgGridTable %}
    {% set table = grid.table %}
    {# classes my not be smoothly loading from gridmaker-- double check #}
    <{{ table.type }} class="{% include 'LighthartGridBundle:Grid:tableClasses.html.twig' %}" {%- for flavor, attribs in table.attr %}{{-' '-}}{{ flavor }}="{{ attribs }}"{%- endfor -%}>
        {% block sections %}
            {% for section in table.section %}
                {% include 'LighthartGridBundle:Section:section.html.twig' with {'section' : section } %}
            {% endfor %}
        </{{ table.type }}>
    {% endblock sections %}
{% endblock lgGridTable %}