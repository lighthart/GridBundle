{% set boolean = cell.options.boolean is defined %}
{%- if cell.value.timestamp is defined -%}
    {% set value = cell.value|date('Y-m-d') %}
{%- elseif cell.html is defined -%}
    {% set value = cell.value|raw %}
{%- elseif boolean -%}
    {% set value = cell.value|boolean %}
{%- else -%}
    {% set value = cell.value|trim %}
{%- endif -%}
<{{- cell.type }} {% for attrib, value in cell.attr -%}{{- attrib -}}="{{- value|trim -}}" {%- endfor -%} {% if cell.attr['width'] is defined %}style="width:{{cell.attr['width']}};"{% endif %} {% if cell.attr['title'] is defined and 'td' == cell.type -%}{%- elseif boolean -%} title="{{cell.value|boolean(false)}}"{%- else -%} title="{{- value -}}"{%- endif %}{% if boolean %}{% endif %}{% if boolean %}width = "2em"{% endif %}>{{-''-}}
{%- if cell.actions is defined -%}
    {% include 'LighthartGridBundle:Action:actions.html.twig' with {'actions': cell.actions} %}
{%- elseif cell.statuses is defined -%}
    {% include 'LighthartGridBundle:Status:statuses.html.twig' with {'status': cell.statuses} %}
{%- elseif cell.attr.checkbox is defined -%}
    <input type="checkbox"/>
{%- elseif cell.value or ( boolean and 'th' != cell.type ) -%}
    {%- if cell.attr.emphasis is defined %}
        <{{cell.attr.emphasis}}>
        {% endif %}
        {{value|raw}}
        {% if cell.attr.emphasis is defined %}
        </{{cell.attr.emphasis}}>
    {% endif -%}
{%- elseif 'th' == cell.type -%}
    {%- if cell.attr.filter is defined %}
        <input type="text" id="lg-filter-{{cell.attr['data-role-lg-class']}}__{{cell.attr['data-role-lg-field']}}" class="lg-filter-input"/>
    {%- elseif cell.options.titleHtml is defined and cell.options.titleHtml -%}
        {{- cell.title|raw -}}
    {%- else -%}
        {{- cell.title -}}
    {%- endif -%}
    {%- include 'LighthartGridBundle:Cell:sort.html.twig' %}
    {%- endif -%}{{-''-}}
</{{- cell.type -}}>