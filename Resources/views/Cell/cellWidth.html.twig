{%- if boolean -%}{% set widthVal = "4em" %}
{%- else -%}
    {%- if width is defined -%}
        {% set widthVal = width %}
    {%- elseif cell.actions is defined -%}
        {%- if cell.actions|length > buttonNum -%}
            {% set widthVal = buttonWidth * buttonNum + buttonPadding + buttonPadding %}
        {%- else -%}
            {% set widthVal = buttonWidth * cell.actions|length + buttonPadding + buttonPadding %}
        {%- endif -%}
        {% set widthVal = widthVal~"px" %}
    {%- endif -%}
{%- endif -%}
{% if widthVal is defined %}
style ="width:{{widthVal}};min-width:{{widthVal}};"
{% else %}
{% endif %}
