{% if cell.attr['width'] is defined %}
    {% set width = cell.attr['width'] %}
{% endif %}
{% set boolean = cell.options.boolean is defined %}
{% set money = cell.options.money is defined %}
{% set edit = cell.options.edit is defined %}
{% if buttonNum is defined %}
{% else %}
    {% set buttonNum = 4 %}
{% endif %}
{% set buttonWidth = 24 %}
{% set buttonPadding = 6 %}
{%- if cell.value.timestamp is defined -%}
    {% set value = cell.value|date('Y-m-d') %}
{%- elseif cell.html is defined -%}
    {% set value = cell.value|raw %}
{%- elseif boolean -%}
    {% set value = cell.value|boolean %}
{%- elseif money -%}
    {% set value = cell.value|money %}
{%- else -%}
    {% set value = cell.value|trim %}
{%- endif -%}
<{{- cell.type }} {% for attrib, value in cell.attr -%}{{- attrib -}}="{{- value|trim -}}" {%- endfor -%} {% if width is defined %}style="width:{{width}};"{% endif %} {% if cell.attr['title'] is defined and 'td' == cell.type -%}{%- elseif boolean -%} title="{{cell.value|boolean(false)}}"{%- else -%} title="{{- value -}}"{%- endif %}{% if boolean %}{% endif %}{% if boolean %}width = "2em"{% endif %}{%- if cell.actions is defined -%}style="width:{% if cell.actions|length > buttonNum %}{{ buttonWidth * buttonNum + buttonPadding}}{% else %}{{ buttonWidth * cell.actions|length + buttonPadding}}{% endif %}px;"{% endif %}>{{-''-}}
{%- if cell.actions is defined -%}
    {% include 'LighthartGridBundle:Action:actions.html.twig' with {'actions': cell.actions} %}
{%- elseif cell.statuses is defined -%}
    {% include 'LighthartGridBundle:Status:statuses.html.twig' with {'status': cell.statuses} %}
{% elseif edit and cell.options.aggregate is not defined %}
    <input type="text" class="lg-edit-field" value="{{- value|raw -}}"/>
{%- elseif value[:1] == '{' -%}
    {%- include 'LighthartGridBundle:Cell:list.html.twig' with {'list' : value[:(value|length - 1)][1:]|split(',')} %}
{%- elseif cell.attr.checkbox is defined -%}
    <input type="checkbox"/>
{%- elseif cell.value or ( boolean and 'th' != cell.type ) -%}
    {%- if cell.attr.emphasis is defined %}<{{- cell.attr.emphasis -}}>{% endif -%}
        {{- value|raw -}}
        {%- if cell.attr.emphasis is defined %}</{{cell.attr.emphasis}}>{% endif -%}
{%- elseif 'th' == cell.type -%}
    {%- if cell.attr.filter is defined %}
        <input type="text" {% if cell.attr['data-role-lg-class'] is defined and cell.attr['data-role-lg-field'] is defined %}id="lg-filter-{{cell.attr['data-role-lg-class']}}__{{cell.attr['data-role-lg-field']}}"{% endif %} class="lg-filter-input"/>
    {%- elseif cell.header is defined and cell.header -%}
        {%- if cell.options.titleHtml is defined and cell.options.titleHtml -%}
            {{- cell.header|raw -}}
        {%- else -%}
            {{- cell.header -}}
        {%- endif -%}
    {%- endif -%}
    {# {{dump(cell)}} #}
    {%- include 'LighthartGridBundle:Cell:sort.html.twig' %}
    {%- endif -%}{{-''-}}
</{{- cell.type -}}>