{% block lgGrid %}
    {# used in blocks below #}
    {% set pageSize = (app.request.cookies.get('lg-grid-results-per-page'))?:10 %}
    {% spaceless %}
        <div class="lg-grid">
            {% block header %}
                {% include 'LighthartGridBundle:Grid:header.html.twig' %}
            {% endblock header %}
            {% block lgGridTable %}
                {% include 'LighthartGridBundle:Grid:table.html.twig' %}
            {% endblock lgGridTable %}
            {% block footer %}
                {% include 'LighthartGridBundle:Grid:footer.html.twig' %}
            {% endblock footer %}
        </div>
    {% endspaceless %}
{% endblock lgGrid %}

{% block javascripts %}
    {% include 'LighthartGridBundle:Grid:javascripts.html.twig' %}
{% endblock javascripts %}
{% block stylesheets %}
    {% include 'LighthartGridBundle:Grid:stylesheets.html.twig' %}
{% endblock stylesheets %}
